<div class="breadcrumb">
	<a href="#">Gerador</a> » <a href="#">Administração</a> » <a href="#">Settings</a>
</div>
<form>
	<p>
		<input type="button" value="Criar Settings" class="submit" title="Criar novo Settings" onclick="location.href='/admin/settings/new'; return false;">
	</p>	

<h2>Settings</h2>
	<table width="100%" cellspacing="0" cellpadding="0" class="sortable">
		<thead>
			<tr>
				<th class="header" style="cursor: pointer;">Nome</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		
		<tbody>
<% @settings.each do |produto| %>
  <tr>
    <td width="250"><%= produto.nome %></td>
    <td><%= link_to image_tag("admin/edit.png"), edit_admin_setting_path(produto) %></td>
	<td><%= link_to image_tag("admin/close.png"), [:admin, produto], :method => :delete, :confirm => 'Esta seguro disso?' %></td>

  </tr>
<% end %>
		</tbody>

</table>
</form>


