<div class="breadcrumb">
    <a href="#">Gerador</a> » <a href="#">Administração</a> » <a href="#">Posts</a>
</div>
<form>
    <p>
        <input type="button" value="Criar Post" class="submit" title="Criar novo Settings" onclick="location.href='/admin/posts/new'; return false;">
    </p>    

<h2>Posts</h2>
    <table width="100%" cellspacing="0" cellpadding="0" class="sortable">
        <thead>
            <tr>
                <th class="header" style="cursor: pointer;">Nome</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        
        <tbody>
<% @posts.each do |pt| %>
  <tr>
    <td width="450"><%= pt.nome %></td>
    <td width="10"><%= link_to image_tag("admin/edit.png"), edit_admin_post_path(pt) %></td>
    <td width="10"><%= link_to image_tag("admin/close.png"), [:admin, pt], :method => :delete, :confirm => 'Esta seguro disso?' %></td>

  </tr>
<% end %>
        </tbody>

</table>
</form>
