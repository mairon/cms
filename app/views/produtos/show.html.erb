  </p>

  <p><hr /></p>

  <p id="descricao">
	<h2 id="descricao">
  	<%= @produto.descricao.gsub(/\n/, "<br />").html_safe %>
	</h2>
  </p>

</div>
<ul id="all_moves">
	<% @pd.each do |prod| %>
		<li id="movie">
				<a href="/eventos/<%=prod.slug%>">
				<img width="120" height="80" src="<%= prod.src_imagem %>"/>
				<div id="cont">
					<span class="title" ><%= link_to prod.nome, produto_path(prod.slug) %></span>
					<br />
					<span class="detalhe" ><%=  truncate( prod.descricao, :length => 25 ) %></span>
				</div>
				</a>
		<hr />

		</li>
	<% end %>
	
	<%= link_to 'Galeria de Eventos', '/gallery' %>

</ul>

