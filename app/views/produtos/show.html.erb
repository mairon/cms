<h1>
<%= link_to @produto.nome, produto_path(@produto.slug) %>
</h1>	
  <p id="last_movie">
	<iframe src="<%= @produto.src_video%>" width="505" height="280" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
  </p>

  <p id="redesocial" align="right">

	<div id="google" style="float:left;margin-left:35px;">
		<g:plusone annotation="none"></g:plusone>	
	</div>

